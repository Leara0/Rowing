@page "/bodymap"
@inject HttpClient Http
@using RowingCompanion.Models

<div class="bodymap-container">
    <div class="body-section">
        <h2>Interactive Injury Prevention Map</h2>
        <div class="body-image-wrapper">
            <div style="position: relative; display: inline-block; width: 400px; height: 600px; 
            background-image: url('/images/female.png'); background-size: contain; background-repeat: no-repeat;">

                <div @onmouseover="ShowBackInjury"
                     @onmouseout="HideInjury"
                     style="position: absolute; top: 230px; left: 150px; width: 30px; height: 60px; 
                background: rgba(2,0,0,0.2); cursor: pointer;">
                </div>

                <div @onmouseover="ShowKneeInjury" @onmouseout="HideInjury"
                     style="position: absolute; top: 375px; left: 120px; width: 40px; height: 60px; 
                     background: rgba(2,0,0,0.2); cursor: pointer;">
                </div>
                <div @onmouseover="ShowKneeInjury" @onmouseout="HideInjury"
                     style="position: absolute; top: 375px; left: 160px; width: 40px; height: 60px; 
            background: rgba(0,0,2,0.2); cursor: pointer;">
                </div>

                <div @onmouseover="ShowShoulderInjury" @onmouseout="HideInjury"
                     style="position: absolute; top: 85px; left: 100px; width: 40px; height: 60px; 
            background: rgba(0,255,0,0.2); cursor: pointer;">
                </div>
                <div @onmouseover="ShowShoulderInjury" @onmouseout="HideInjury"
                     style="position: absolute; top: 85px; left: 200px; width: 40px; height: 60px; 
            background: rgba(0,255,0,0.2); cursor: pointer;">
                </div>

                <div @onmouseover="ShowWristInjury" @onmouseout="HideInjury"
                     style="position: absolute; top: 230px; left: 85px; width: 30px; height: 30px; 
            background: rgba(0,255,0,0.2); cursor: pointer;">
                </div>
                <div @onmouseover="ShowWristInjury" @onmouseout="HideInjury"
                     style="position: absolute; top: 270px; left: 210px; width: 30px; height: 30px; 
            background: rgba(0,255,0,0.2); cursor: pointer;">
                </div>

                <div @onmouseover="ShowRibInjury" @onmouseout="HideInjury"
                     style="position: absolute; top: 130px; left: 120px; width: 40px; height: 60px; 
            background: rgba(0,255,0,0.2); cursor: pointer;">
                </div>
                <div @onmouseover="ShowRibInjury" @onmouseout="HideInjury"
                     style="position: absolute; top: 130px; left: 170px; width: 40px; height: 60px; 
                     background: rgba(0,255,0,0.2); cursor: pointer;">
                </div>

                <div @onmouseover="ShowHipInjury" @onmouseout="HideInjury"
                     style="position: absolute; top: 230px; left: 110px; width: 40px; height: 60px; 
                     background: rgba(0,255,0,0.2); cursor: pointer;">
                </div>
                <div @onmouseover="ShowHipInjury" @onmouseout="HideInjury"
                     style="position: absolute; top: 230px; left: 180px; width: 40px; height: 60px; 
            background: rgba(0,255,0,0.2); cursor: pointer;">
                </div>
            </div>
        </div>
    </div>
    
    <div class="info-panel">
        <div class="injury-card @(string.IsNullOrEmpty(selectedBodyPart) ? "" : "active")">
            <div class="card-header">
                <h3>@(string.IsNullOrEmpty(selectedBodyPart) ? "Select a body area" : selectedBodyPart)</h3>
            </div>
            <div class=card-body>
                @if (!string.IsNullOrEmpty(injuryInfo))
                {
                    <div class="injury-details">
                        <p>@injuryInfo</p>
                    </div>
                }
                else
                {
                    <p class="placeholder-text">Hover over any highlighted area on the body to see injury 
                        prevention information.</p>
                }
            </div>
        </div>
    </div>
</div>


<div style="margin-top: 20px; padding: 10px; border: 1px solid #ccc;">
    <h4>@selectedBodyPart</h4>
    <p>@injuryInfo</p>
</div>

@code {
    private string selectedBodyPart = "Hover over a body part";
    private string injuryInfo = "Information will appear here";
    private List<InjuryPreventionDto> injuries = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadInjuryData();
    }

    private async Task LoadInjuryData()
    {
        try
        {
            injuries = await Http.GetFromJsonAsync<List<InjuryPreventionDto>>("api/injuryprevention");
            Console.WriteLine($"Loaded {injuries.Count} injuries");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading injuries: {ex.Message}");
        }
        
    }

    private void ShowBackInjury() => ShowInjuryInfo("Back");
    private void ShowKneeInjury() => ShowInjuryInfo("Knees");
    private void ShowShoulderInjury() => ShowInjuryInfo("Shoulders");
    private void ShowWristInjury() => ShowInjuryInfo("Wrists");
    private void ShowRibInjury() => ShowInjuryInfo("Ribs");
    private void ShowHipInjury() => ShowInjuryInfo("Hips");

    private void ShowInjuryInfo(string bodyArea)
    {
        var injury = injuries.FirstOrDefault(i => i.BodyArea == bodyArea);

        if (injury != null)
        {
            selectedBodyPart = injury.BodyArea;
            injuryInfo = $"Injury: {injury.InjuryType}. Prevention: {injury.PreventionStrategy}. " +
                         $"Exercises: {injury.StrengtheningExercises}";
        }
        else
        {
            selectedBodyPart = bodyArea;
            injuryInfo = "No injury data available for this area";
        }
    }
    private void HideInjury()
    {
        selectedBodyPart = "Hover over a body part";
        injuryInfo = "Information will appear here";
    }
}